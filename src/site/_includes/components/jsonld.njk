    {%- set absolutePageUrl %}{{ page.url | url | absoluteUrl(site.url) }}{% endset -%}
    {% set isPost = layout == 'post' %}
    <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        {%- if isPost -%}
        "@type": "BlogPosting",
        {%- else -%}
        "@type":"WebSite",
        {%- endif -%}
        "url":"{{ absolutePageUrl }}",
        "image":"{{image or site.logo}}",
        "headline":"{{title or site.title}}",
        "description": "{{description or site.description}}",
        "author": {
            "@type": "Person",
            "name": "{{ author.name }}",
            "sameAs":[
                "{{ author.twitter.url }}",
                "{{ author.instagram.url }}",
                "{{ author.linkedin.url }}",
                "{{ author.github.url }}"
            ]
        }
    }
    </script>