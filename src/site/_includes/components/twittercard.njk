    {% set absolutePageUrl %}{{ page.url | url | absoluteUrl(site.url) }}{% endset %}
    {%- if image %}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="{{ image | imageUrl(page) | absoluteUrl(site.url)}}" />
    {% else -%}
    <meta name="twitter:card" content="summary" />
    {% endif -%}
    <meta name="twitter:creator" content="{{author.twitter.name}}" />
    <meta name="twitter:title" content="{{renderData.title or title or site.title}}" />
    <meta name="twitter:description" content="{{renderData.description or description or site.description}}" />
    